@model BlogApp.UI.Models.VMs.MakaleVMs.MakaleListeleVM

<div class="container-fluid mt-3">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="text-center mb-0">@Model.Baslik</h4>
                </div>
                <div class="card-body">
                    <p><strong>Yazar:</strong> @(Model.AppUser != null ? Model.AppUser.UserName : "Yazar bilgisi yok") </p>
                    <p><strong>Yayınlanma Tarihi:</strong> @Model.EklemeTarihi</p>
                    <p><strong>Konu:</strong> @(Model.Konu != null ? Model.Konu.KonuAdi : "Konu bilgisi yok")</p>
                    <div class="mt-4">
                        <p>@Model.Detay</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div>
