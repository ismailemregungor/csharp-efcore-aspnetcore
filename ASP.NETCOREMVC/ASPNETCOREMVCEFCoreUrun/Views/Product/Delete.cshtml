@model Product

<h2>Ürün Sil</h2>
<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Silinecek Ürün</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
